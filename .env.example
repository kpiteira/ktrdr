# KTRDR API environment variables example
# Copy this file to .env and modify as needed

# API metadata
KTRDR_API_TITLE="KTRDR API"
KTRDR_API_DESCRIPTION="REST API for KTRDR trading system"
KTRDR_API_VERSION="1.0.5"

# Server configuration
KTRDR_API_HOST="127.0.0.1"
KTRDR_API_PORT="8000"
KTRDR_API_RELOAD="True"
KTRDR_API_LOG_LEVEL="INFO"
KTRDR_API_ENVIRONMENT="development"

# API routing
KTRDR_API_API_PREFIX="/api/v1"

# CORS configuration
KTRDR_API_CORS_ORIGINS="*"
# For multiple origins, use comma-separated values:
# KTRDR_API_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
KTRDR_API_CORS_ALLOW_CREDENTIALS="True"
KTRDR_API_CORS_ALLOW_METHODS="*"
KTRDR_API_CORS_ALLOW_HEADERS="*"
KTRDR_API_CORS_MAX_AGE="600"

# PostgreSQL + TimescaleDB configuration
# Database connection parameters for checkpoint persistence system
# These defaults match docker-compose.yml postgres service configuration
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="ktrdr"
POSTGRES_USER="ktrdr_admin"
POSTGRES_PASSWORD="ktrdr_dev_password"

# Database URL (alternative to individual parameters)
# Format: postgresql://{user}:{password}@{host}:{port}/{database}
# If set, this takes precedence over individual POSTGRES_* variables
# For Docker backend: DATABASE_URL="postgresql://ktrdr_admin:ktrdr_dev_password@postgres:5432/ktrdr"
# For host machine: DATABASE_URL="postgresql://ktrdr_admin:ktrdr_dev_password@localhost:5432/ktrdr"
DATABASE_URL="postgresql://ktrdr_admin:ktrdr_dev_password@localhost:5432/ktrdr"