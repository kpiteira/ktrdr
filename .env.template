# Interactive Brokers Configuration
# Copy this file to .env and update with your settings

# Connection Settings
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper, 7496 for live
IB_CLIENT_ID=1
IB_TIMEOUT=10
IB_READONLY=false

# Rate Limiting
IB_RATE_LIMIT=50  # Max requests per period
IB_RATE_PERIOD=60  # Period in seconds
IB_PACING_DELAY=0.6  # Delay between requests in seconds

# Retry Settings
IB_MAX_RETRIES=3
IB_RETRY_DELAY=2.0
IB_RETRY_MAX_DELAY=60.0

# IB API Limits
IB_MAX_REQUESTS_10MIN=60  # IB's 10-minute limit