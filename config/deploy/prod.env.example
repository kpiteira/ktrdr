# Production Environment Configuration
# Source this file before running deployment scripts

# Backend API URL (where workers will connect)
export KTRDR_BACKEND_API="http://192.168.1.100:8000"

# Network gateway
export KTRDR_GATEWAY="192.168.1.1"

# Network mask (CIDR notation)
export KTRDR_NETMASK="24"

# Git repository URL
export KTRDR_GIT_REPO="https://github.com/your-org/ktrdr.git"

# Git branch/tag for production
export KTRDR_GIT_REF="main"

# Worker configuration
export KTRDR_WORKER_CONFIG="config/workers.prod.yaml"

# Deployment settings
export KTRDR_ENV="production"
