# Development Dockerfile for KTRDR
# Optimized for quick rebuilds and live code changes
# Uses CPU-only PyTorch (~500MB vs ~4GB with CUDA)

FROM python:3.13-slim as dev

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    ENVIRONMENT=development \
    PYTHONPATH=/app \
    PATH="/app/.venv/bin:$PATH" \
    PIP_CACHE_DIR=/root/.cache/pip \
    UV_CACHE_DIR=/root/.cache/uv

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gcc \
    python3-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install UV for package management
RUN pip install --no-cache-dir uv

# Create cache directories with appropriate permissions
RUN mkdir -p /root/.cache/pip /root/.cache/uv && \
    chmod -R 777 /root/.cache/pip /root/.cache/uv

# Copy ONLY dependency files first - this is the key caching optimization
COPY pyproject.toml uv.lock ./

# Inject CPU-only PyTorch source (Mac dev machines have no GPU)
RUN cat >> pyproject.toml << 'EOF'

[tool.uv.sources]
torch = { index = "pytorch-cpu" }

[[tool.uv.index]]
name = "pytorch-cpu"
url = "https://download.pytorch.org/whl/cpu"
EOF

# Install Python dependencies with UV sync
# This layer will be cached as long as dependency files don't change
# Include ML extras for training/backtest workers (dev mode installs everything)
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project --extra ml

# Create non-root user for better security even in development
RUN useradd -m ktrdr && \
    chown -R ktrdr:ktrdr /app

# Create necessary directories with correct permissions
RUN mkdir -p /app/logs /app/data /app/output /app/tests && \
    chown -R ktrdr:ktrdr /app/logs /app/data /app/output /app/tests

# We don't copy the application code here - it will be mounted as a volume
# This way code changes don't trigger rebuilds

# Switch to non-root user
USER ktrdr

# Command to run the application with hot-reload enabled
CMD ["/app/.venv/bin/uvicorn", "ktrdr.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-exclude", "logs", "--reload-exclude", "logs/*", "--reload-exclude", "*.log", "--log-config", "/app/ktrdr/config/logging_config.json"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8000/api/v1/health || exit 1